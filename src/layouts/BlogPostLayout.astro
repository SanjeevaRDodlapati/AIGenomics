---
import BaseLayout from './BaseLayout.astro';
import RelatedPosts from '../components/RelatedPosts.astro';
import ReadingProgress from '../components/ReadingProgress.astro';
import ContentSeries from '../components/ContentSeries.astro';
import CodeHighlighter from '../components/CodeHighlighter.astro';

interface Props {
  frontmatter: {
    title: string;
    description?: string;
    publishedAt?: Date;
    tags?: string[];
    series?: string;
    seriesOrder?: number;
    author?: string;
    readingTime?: string;
    category?: string;
  };
}

const { frontmatter } = Astro.props;

// Calculate estimated reading time if not provided
function estimateReadingTime(content: string): string {
  const wordsPerMinute = 200;
  const wordCount = content.trim().split(/\s+/).length;
  const minutes = Math.ceil(wordCount / wordsPerMinute);
  return `${minutes} min read`;
}

// Format date
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}

// Create current post object for related posts component
const currentPost = {
  slug: Astro.url.pathname.split('/').filter(Boolean).pop() || '',
  data: frontmatter
};
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <!-- Reading Progress Component -->
  <ReadingProgress showPercentage={true} showTimeEstimate={true} />
  
  <article class="blog-post">
    <!-- Article Header -->
    <header class="article-header">
      <div class="header-meta">
        {frontmatter.category && (
          <span class="category-badge">{frontmatter.category}</span>
        )}
        
        {frontmatter.tags && frontmatter.tags.length > 0 && (
          <div class="tags-list">
            {frontmatter.tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
      
      <h1 class="article-title">{frontmatter.title}</h1>
      
      {frontmatter.description && (
        <p class="article-description">{frontmatter.description}</p>
      )}
      
      <div class="article-byline">
        <div class="author-info">
          <div class="author-avatar">
            <span class="avatar-initial">SD</span>
          </div>
          <div class="author-details">
            <span class="author-name">{frontmatter.author || 'Dr. Sanjeeva Dodlapati'}</span>
            <div class="publication-meta">
              {frontmatter.publishedAt && (
                <time class="publish-date" datetime={frontmatter.publishedAt.toISOString()}>
                  {formatDate(frontmatter.publishedAt)}
                </time>
              )}
              <span class="reading-time">
                {frontmatter.readingTime || '5 min read'}
              </span>
            </div>
          </div>
        </div>
        
        <div class="article-actions">
          <button class="action-btn bookmark-btn" title="Bookmark this article">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
            </svg>
          </button>
          
          <button class="action-btn share-btn" title="Share this article">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
            </svg>
          </button>
          
          <button class="action-btn print-btn" title="Print this article">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
