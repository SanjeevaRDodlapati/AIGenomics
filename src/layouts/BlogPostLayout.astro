<script>
class BlogPostInteractions {
  constructor() {
    this.initializeEngagementMetrics();
    this.setupSocialSharing();
    this.setupArticleActions();
  }
  
  initializeEngagementMetrics() {
    // Simulate engagement metrics (would connect to analytics in production)
    document.getElementById('view-count').textContent = '1,247';
    document.getElementById('like-count').textContent = '89';
    document.getElementById('bookmark-count').textContent = '156';
  }
  
  setupSocialSharing() {
    const twitterBtn = document.querySelector('.share-twitter');
    const linkedinBtn = document.querySelector('.share-linkedin');
    const redditBtn = document.querySelector('.share-reddit');
    const copyBtn = document.querySelector('.copy-link');
    
    const url = encodeURIComponent(window.location.href);
    const title = encodeURIComponent(document.title);
    
    if (twitterBtn) {
      twitterBtn.addEventListener('click', () => {
        window.open(`https://twitter.com/intent/tweet?url=${url}&text=${title}`, '_blank');
      });
    }
    
    if (linkedinBtn) {
      linkedinBtn.addEventListener('click', () => {
        window.open(`https://linkedin.com/sharing/share-offsite/?url=${url}`, '_blank');
      });
    }
    
    if (redditBtn) {
      redditBtn.addEventListener('click', () => {
        window.open(`https://reddit.com/submit?url=${url}&title=${title}`, '_blank');
      });
    }
    
    if (copyBtn) {
      copyBtn.addEventListener('click', () => {
        navigator.clipboard.writeText(window.location.href);
        this.showNotification('Link copied to clipboard!');
      });
    }
  }
  
  setupArticleActions() {
    const bookmarkBtn = document.querySelector('.bookmark-btn');
    const shareBtn = document.querySelector('.share-btn');
    const printBtn = document.querySelector('.print-btn');
    
    if (bookmarkBtn) {
      bookmarkBtn.addEventListener('click', () => {
        this.toggleBookmark();
      });
    }
    
    if (shareBtn) {
      shareBtn.addEventListener('click', () => {
        this.shareArticle();
      });
    }
    
    if (printBtn) {
      printBtn.addEventListener('click', () => {
        window.print();
      });
    }
    
    // Notify button
    const notifyBtn = document.querySelector('.notify-btn');
    if (notifyBtn) {
      notifyBtn.addEventListener('click', () => {
        this.subscribeToNotifications();
      });
    }
  }
  
  toggleBookmark() {
    const btn = document.querySelector('.bookmark-btn');
    const isBookmarked = btn.classList.contains('bookmarked');
    
    if (isBookmarked) {
      btn.classList.remove('bookmarked');
      this.showNotification('Bookmark removed');
    } else {
      btn.classList.add('bookmarked');
      this.showNotification('Article bookmarked!');
    }
  }
  
  shareArticle() {
    if (navigator.share) {
      navigator.share({
        title: document.title,
        url: window.location.href
      });
    } else {
      // Fallback to copy link
      navigator.clipboard.writeText(window.location.href);
      this.showNotification('Link copied to clipboard!');
    }
  }
  
  subscribeToNotifications() {
    // Simulate subscription process
    this.showNotification('You will be notified when comments are available!');
    
    const btn = document.querySelector('.notify-btn');
    if (btn) {
      btn.textContent = 'Notification set!';
      btn.disabled = true;
      btn.style.background = '#10b981';
    }
  }
  
  showNotification(message) {
    const notification = document.createElement('div');
    notification.className = 'toast-notification';
    notification.textContent = message;
    notification.style.cssText = `
      position: fixed;
      bottom: 24px;
      right: 24px;
      background: #111827;
      color: white;
      padding: 12px 20px;
      border-radius: 8px;
      font-size: 14px;
      font-weight: 500;
      z-index: 1000;
      transform: translateY(100px);
      opacity: 0;
      transition: all 0.3s ease;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    `;
    
    document.body.appendChild(notification);
    
    // Animate in
    setTimeout(() => {
      notification.style.transform = 'translateY(0)';
      notification.style.opacity = '1';
    }, 100);
    
    // Remove after delay
    setTimeout(() => {
      notification.style.transform = 'translateY(100px)';
      notification.style.opacity = '0';
      setTimeout(() => notification.remove(), 300);
    }, 3000);
  }
}

